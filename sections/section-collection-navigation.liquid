{% comment %}theme-check-disable ImgLazyLoading{% endcomment %}
{%- liquid
  assign collection = collections[section.settings.collection]

  if section.settings.link_text != empty and section.settings.link_url != blank
    assign link = true
  endif

  if section.settings.title != empty 
    assign show_header = true
  elsif link and section.settings.text_alignment == 'start'
    assign show_header = true
  endif

  if section.settings.title != empty
    assign container_div = true
  endif

  capture title_classes
    echo 'w900'
    if section.settings.text_alignment == 'center'
      echo ' text-center align-center'
    endif
  endcapture

  if section.settings.collections == blank and request.design_mode == false
    continue
  endif
-%}

{%- if link %}
  {%- capture link -%}
    <p class="class-x{% unless section.settings.show_link %} link-btn{% endunless %} button-palette-{{ section.settings.button_color_palette }}"><a href="{{ section.settings.link_url }}" class="{% if section.settings.show_link %}inline strong{% elsif settings.button_style == 'inv' %}inv{% endif %}"><span {% if section.settings.show_link %}class="link-underline"{% endif %}>{{ section.settings.link_text }}</span></a></p>
  {%- endcapture %}
{%- endif -%}

{%- if show_header -%}
<header class="cols{% if link and section.settings.show_link == false %} align-middle{% endif %}{% if section.settings.title == empty %} text-end{% endif %}">
{%- if container_div -%}<div class="{{ title_classes }}">{%- endif -%}
    {%- if section.settings.title != blank -%}
    <{{ section.settings.title_size }} class="{{ title_classes }} ff-{{ section.settings.title_font }} {% if section.settings.enable_custom_text_styling %}text-palette-{{ section.settings.title_color_palette }} fw-{{ section.settings.title_weight }}{% endif %}">{{ section.settings.title }}</{{ section.settings.title_size }}>
  {%- endif -%}
    {%- if container_div -%}</div>{%- endif -%}
  {%- if link and section.settings.text_alignment == 'start' -%}
    {{ link | replace: 'class-x', 'mobile-hide' }}
  {%- endif -%}
  </header>
{%- endif -%}
<ul class="l4cl category {% if section.settings.mobile_layout == 'grid' %} mobile-scroll w50-mobile{% endif %}{% if section.settings.text_alignment == 'center' %} justify-center{% endif %}{% if section.settings.collection_title_position == 'center' %} text-center{% endif %}"
style="--fixed_width: {{ section.settings.collection_size }}px"
>
  {%- if section.settings.collections == blank %}
    {%- for i in (1..5) %}
      {%- liquid
        capture current
          cycle 1, 2, 3, 4, 5
        endcapture
      -%}
      <li>
        <figure class="{% if section.settings.show_collection_titles %}m10 {% endif %}{% if settings.multiply_collection_images == 'multiply' %}img-multiply{% elsif settings.multiply_collection_images == 'multiply-bg' %}img-multiply-bg{% endif %}{% if section.settings.show_in_circle and section.settings.custom_image_ratio == 100 %} rounded{% endif %}" style="--ratio:{{ section.settings.custom_image_ratio | divided_by: 100.0 }}; {% if section.settings.show_border %}--bw: var(--btn_bd); --bd: {{ section.settings.border_color }};{% endif %} --pd: 3px;">
          <picture>
            {% if section.settings.show_collection_titles == false %}
              <a href="{{ collection.url }}" aria-label="Collection title"></a>
            {% endif %}
            {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </picture>
        </figure>
        {% if section.settings.show_collection_titles %}<p class="inline"><a href="" class="overlay-content"><span class="fw-{{ section.settings.text_weight }} ff-{{ section.settings.text_font }} size-{{ section.settings.collection_title_size | remove: 'px' }}">Collection title</span></a></p>{% endif %}
      </li>
    {%- endfor -%}
  {%- else %}
    {%- for collection in section.settings.collections -%}
      {%- liquid
        capture current
          cycle 1, 2, 3, 4, 5, 6
        endcapture
      -%}
      <li>
        <figure class="{% if section.settings.show_collection_titles %}m10 {% endif %}{% if settings.multiply_collection_images == 'multiply' %}img-multiply{% elsif settings.multiply_collection_images == 'multiply-bg' %}img-multiply-bg{% endif %}{% if section.settings.show_in_circle and section.settings.custom_image_ratio == 100 %} rounded{% endif %}" style="--ratio:{{ section.settings.custom_image_ratio | divided_by: 100.0 }}; {% if section.settings.show_border %}--bw: var(--btn_bd); --bd: {{ section.settings.border_color }};{% endif %} --pd: 3px;">
          <picture>
            {% if section.settings.show_collection_titles == false %}
              <a href="{{ collection.url }}" aria-label="{{ collection.title | escape }}"></a>
            {% endif %}
            {% if collection.featured_image %}
              <img
                  src="{{- collection.featured_image | image_url: width: 125 -}}"
                  srcset="{{ collection.featured_image | image_url: width: 125 }} 1x,{{ collection.featured_image | image_url: width: 250 }} 2x"
                  width="125"
                  height="125"
                  alt="{{ collection.featured_image.alt | default: collection.title | escape }}"
                  {% if section.settings.fill_images %}class="filled"{% endif %}
                  loading="{% if section.index > 1 or forloop.first == false %}lazy{% else %}eager{% endif %}"
              >
            {% else %}
            	{{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </picture>
        </figure>
      {% if section.settings.show_collection_titles %}<p class="inline"><a href="{{ collection.url }}" class="overlay-content"><span class="fw-{{ section.settings.text_weight }} ff-{{ section.settings.text_font }} size-{{ section.settings.collection_title_size | remove: 'px' }}">{{ collection.title }}</span></a></p>{% endif %}
      </li>
    {%- endfor -%}
  {% endif -%}
</ul>
{%- if link and section.settings.text_alignment == 'center' -%}
  {{ link | replace: 'class-x', 'm0 text-center' }}
{%- elsif link and section.settings.text_alignment == 'start' -%}
  {{ link | replace: 'class-x', 'm0 mobile-only' }}
{%- endif -%}

<style>
  #shopify-section-{{ section.id }} { z-index: {{ section.settings.fix_zindex }}!important; }
  @media only screen and (min-width: 47.5em) {
    {% if link and section.settings.text_alignment == 'center' %}
      #shopify-section-{{ section.id }} { margin-bottom: {{ section.settings.spacing_desktop }}px; }
    {% else %}
      #shopify-section-{{ section.id }} .l4cl { margin-bottom: {{ section.settings.spacing_desktop | minus: 22 }}px; }
    {% endif %}
    {% if section.settings.spacing_desktop < 0 %}
      #shopify-section-{{ section.id }} + *.has-kinetic-text { pointer-events: none; }
    {% endif %}

  }
  @media only screen and (max-width: 47.5em) {
    {% if link %}
      #shopify-section-{{ section.id }} { margin-bottom: {{ section.settings.spacing_mobile }}px; }
    {% else %}
      #shopify-section-{{ section.id }} .l4cl { margin-bottom: {{ section.settings.spacing_mobile | minus: 8 }}px; }
    {% endif %}
    {% if section.settings.spacing_mobile < 0 %}
      #shopify-section-{{ section.id }} + *.has-kinetic-text { pointer-events: none; }
    {% endif %}
  }
</style>

